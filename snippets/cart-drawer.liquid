<section
  id="cart-drawer"
  class="w-[300px] bg-gray-50 h-screen fixed top-0 translate-x-96 z-50 sm:w-[330px] duration-700 ease-in-out right-0"
>
  <div class="">
    {% # title and close cart %}
    <div class="w-full h-14 flex px-4 justify-between items-center py-3 z-20 shadow-xl">
      <span class="text-base font-semibold">Item added to your cart</span>
      <span id="closeCartProducts" class="block w-7 h-7 cursor-pointer">
        {{ 'icon-close.svg' | inline_asset_content }}
      </span>
    </div>
    {% # Products here %}
    <div
      id="cart-items-container"
      class="w-full px-1 h-[calc(100vh-200px)] py-4 flex flex-col just-center items-center gap-3 overflow-y-scroll"
    >
      {% # Loop product here %}
      {% # End Loop product here %}
      <div id="empty-cart-message" class="hidden text-center py-10">
        <p class="text-xl font-semibold mb-4">You have 0 products in your cart.</p>
        <a href="{{ routes.all_products_collection_url }}" class="underline text-blue-600 hover:text-blue-800">
          Continue Shopping
        </a>
      </div>
    </div>
    {% # Footer subtotal %}
    <div class="w-full absolute bottom-0 right-0 h-36 z-20 shadow flex flex-col justify-center items-start px-4 gap-5 bg-white">
      <div class="w-full flex justify-between items-center">
        <span class="text-2xl font-semibold">Subtotal</span>
        <span id="cart-total-amount" class="text-base font-normal">$0.00</span>
      </div>
      <div class="w-full flex justify-between items-center">
        <a class="w-28 border text-center py-3 rounded-lg cursor-pointer">View Cart</a>
        <a class="w-28 border text-center py-3 rounded-lg bg-black text-white cursor-pointer">Check Out</a>
      </div>
    </div>
  </div>
</section>
