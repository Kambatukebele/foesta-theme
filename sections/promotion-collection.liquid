    }
  ],
  "presets": [
    {
      "name": "Promotion collection",
      "settings": {
        "promotion_paddingY_large_device": "lg:py-24",
        "promotion_paddingY_small_device": "py-12",
        "promotion_collection_text_color": "#000000",
        "promotion_collection_button_bg_color": "#000000",
        "promotion_collection_button_text_color": "#ffffff",
        "promotion_collection_rounded": "rounded-none"
      },
      "blocks": [
        {
          "type": "promotion_collection",
          "settings": {
            "block_promotion_small_text": "Free Shipping order",
            "block_promotion_large_text": "25% Off Items",
            "block_promotion_text_btn": "block_promotion_text_btn"
          }
        }
      ]
    }
  ]
}
{% endschema %}
