      "id": "promotion_paddingY_large_device",
      "label": "Padding top and bottom on Large screen",
      "options": [
        {
          "label": "44px",
          "value": "lg:py-12"
        },
        {
          "label": "56px",
          "value": "lg:py-14"
        },
        {
          "label": "64px",
          "value": "lg:py-16"
        },
        {
          "label": "80px",
          "value": "lg:py-20"
        },
        {
          "label": "96px",
          "value": "lg:py-24"
        }
      ],
      "default": "lg:py-24",
      "info": "This is the padding top and bottom only for the large device from 1024px"
    },
    {
      "type": "header",
      "content": "Texts color"
    },
    {
      "type": "color",
      "id": "promotion_collection_text_color",
      "label": "Texts color",
      "default": "#000000",
      "info": "This is the color for all the text color for this section"
    },
    {
      "type": "header",
      "content": "Button color"
    },
    {
      "type": "color",
      "id": "promotion_collection_button_bg_color",
      "label": "Background color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "promotion_collection_button_text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Corners settings"
    },
    {
      "type": "select",
      "id": "promotion_collection_rounded",
      "label": "Corner rounded",
      "options": [
        {
          "label": "None",
          "value": "rounded-none"
        },
        {
          "label": "Small",
          "value": "rounded-sm"
        },
        {
          "label": "Medium",
          "value": "rounded-md"
        },
        {
          "label": "Large",
          "value": "rounded-lg"
        },
        {
          "label": "Extra large",
          "value": "rounded-xl"
        },
        {
          "label": "2 Extras large",
          "value": "rounded-2xl"
        }
      ],
      "default": "rounded-none"
    }
  ],
  "blocks": [
    {
      "name": "Promotion collection",
      "type": "promotion_collection",
      "limit": 2,
      "settings": [
        {
          "type": "header",
          "content": "Image"
        },
        {
          "type": "image_picker",
          "id": "block_promotion_image",
          "label": "Image"
        },
        {
          "type": "header",
          "content": "Texts"
        },
        {
          "type": "text",
          "id": "block_promotion_small_text",
          "label": "Small text",
          "default": "Free Shipping order"
        },
        {
          "type": "text",
          "id": "block_promotion_large_text",
          "label": "Large text",
          "default": "25% Off Items"
        },
        {
          "type": "text",
          "id": "block_promotion_text_btn",
          "label": "Button",
          "default": "Explore"
        },
        {
          "type": "url",
