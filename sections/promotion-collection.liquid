<section class="w-full {{ section.settings.promotion_paddingY_small_device }} {{ section.settings.promotion_paddingY_large_device }}">
  <div class="container grid gap-4 grid-cols-1 md:grid-cols-2">
    {% if section.blocks.size > 0 %}
      {% for promotion in section.blocks %}
        {% case promotion.type %}
          {%- when 'promotion_collection' -%}
            <div
              class="flex flex-col justify-center items-center relative   {{ section.settings.promotion_collection_rounded }}"
              {{ promotion.shopify_attributes }}
            >
              <div class="w-full group overflow-hidden">
                {% if promotion.settings.block_promotion_image != blank %}
                  {{
                    promotion.settings.block_promotion_image
                    | image_url: width: 1000
                    | image_tag:
                      class: 'w-full h-full object-cover block rounded-xl transform transition-transform duration-300 ease-in-out group-hover:scale-105'
                  }}
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover block' }}
                {% endif %}
              </div>
              <div class="w-full flex flex-col justify-center items-center gap-3 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2">
                <h6
                  style="color: {{section.settings.promotion_collection_text_color }}"
                  class="text-base font-light w-full text-center"
                >
                  {{ promotion.settings.block_promotion_small_text }}
                </h6>
                <h3
                  style="color: {{section.settings.promotion_collection_text_color }}"
                  class="text-4xl font-medium w-full text-center"
                >
                  {{ promotion.settings.block_promotion_large_text }}
                </h3>
                <a
                  style="background-color: {{ section.settings.promotion_collection_button_bg_color }} ;color: {{section.settings.promotion_collection_button_text_color }}"
                  class="py-2 px-3 rounded-full"
                  href="{{ promotion.settings.block_promotion_url_btn }}"
                >
                  {{ promotion.settings.block_promotion_text_btn }}
                </a>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    {% else %}
      {%- for item in (1..2) -%}
        <div class="border flex flex-col justify-center items-center relative {{ section.settings.promotion_collection_rounded }}">
          <div class="w-full">
            {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover block' }}
          </div>
          <div class="w-full flex flex-col justify-center items-center gap-3 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2">
            <h6
              style="color: {{section.settings.promotion_collection_text_color }}"
              class="text-base font-light w-full text-center"
            >
              Free Shipping over order $150
            </h6>
            <h3
              style="color: {{section.settings.promotion_collection_text_color }}"
              class="text-4xl font-medium w-full text-center"
            >
              Sometype collection
            </h3>
            <a
              style="background-color: {{ section.settings.promotion_collection_button_bg_color }} ;color: {{section.settings.promotion_collection_button_text_color }}"
              class="py-2 px-3 rounded-full"
              >Explore now</a
            >
          </div>
        </div>
      {%- endfor -%}
    {% endif %}
  </div>
</section>

