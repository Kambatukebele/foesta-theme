<section class="w-full h-fit {{ section.settings.contact_us_section_paddingY_small_device }} {{ section.settings.contact_us_section_paddingY_large_device }}">
  <div class="container px-4 flex flex-col justify-center items-start gap-8 lg:flex-row lg:gap-4 lg:w-5xl">
    <div class="w-full h-fit py-5 flex flex-col justify-center items-start gap-8">
      <h2 class="text-3xl font-semibold">
        {{ section.settings.contact_us_heading }}
      </h2>
      <div class="w-full flex justify-start items-center flex-wrap gap-2.5 lg:flex-col lg:items-start lg:gap-10">
        <!-- Loop contact here -->
        {%- if section.blocks.size > 0 -%}
          {%- for details in section.blocks -%}
            {%- case details.type -%}
              {%- when 'contact_details' -%}
                <div {{ details.shopify_attributes }} class="flex flex-col w-auto px-1">
                  <span class="text-xl font-medium">{{ details.settings.contact_us_details_key }}:</span>
                  <span class="text-base font-normal">{{ details.settings.contact_us_details_value }}</span>
                </div>
            {%- endcase -%}
          {%- endfor -%}
        {%- else -%}
          {% for item in (1..3) %}
            <div class="flex flex-col w-auto px-1">
              <span class="text-xl font-medium">Phone:</span>
              <span class="text-base font-normal">+430 000 000 000</span>
            </div>
          {% endfor %}
        {%- endif -%}
      </div>
    </div>
    <div class="px-4 w-full flex flex-col justify-center items-start gap-3.5 py-10 rounded-md">
      {% form 'contact' %}
        {% if form.posted_successfully? %}
          <p class="text-green-600 mb-4">Thanks for reaching out! Weâ€™ll get back to you soon.</p>
        {% elsif form.errors %}
          <div class="text-red-600 mb-4">
            <p>There were issues with your submission:</p>
            <ul>
              {% for field in form.errors %}
                <li>{{ field | capitalize }}: {{ form.errors[field] }}</li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}
        <input
          class="w-full border border-gray-200 rounded-md py-4 px-2 mb-5"
          type="text"
          name="contact[name]"
          required
          placeholder="Name:"
        >
        <input
          class="w-full border border-gray-200 rounded-md py-4 px-2 mb-5"
          type="email"
          name="contact[email]"
          required
          placeholder="Email:"
        >
        <input
          class="w-full border border-gray-200 rounded-md py-4 px-2 mb-5"
          type="text"
          name="contact[phone]"
          required
          placeholder="Phone Number:"
        >
        <textarea
          rows="10"
          class="w-full border border-gray-200 rounded-md py-4 px-2 mb-5"
          name="contact[body]"
          required
          placeholder="Message:"
        ></textarea>
        <button
          style="background-color:{{ section.settings.contact_us_button_text_bg_color }};color:{{ section.settings.contact_us_button_text_color }};"
          class="w-full border border-gray-200 rounded-md py-4 px-2 cursor-pointer transition-all duration-100 ease-in-out hover:[{{ section.settings.contact_us_button_text_bg_hover_color }}]"
        >
          {{ section.settings.contact_us_button_text }}
        </button>
      {% endform %}
    </div>
  </div>
</section>
<section class="w-full h-fit py-12">
  <div class="container rounded-3xl block">{{ section.settings.contact_us_section_maps }}</div>
</section>

